<config>
    <modules>
        <BS_Handover>
            <version>1.0.1</version>
        </BS_Handover>
    </modules>
    <global>
        <resources>
            <bs_handover_setup>
                <setup>
                    <module>BS_Handover</module>
                    <class>BS_Handover_Model_Resource_Setup</class>
                </setup>
            </bs_handover_setup>
        </resources>
        <blocks>
            <bs_handover>
                <class>BS_Handover_Block</class>
            </bs_handover>
        </blocks>
        <helpers>
            <bs_handover>
                <class>BS_Handover_Helper</class>
            </bs_handover>
        </helpers>
        <models>
            <bs_handover>
                <class>BS_Handover_Model</class>
                <resourceModel>bs_handover_resource</resourceModel>
            </bs_handover>
            <bs_handover_resource>
                <class>BS_Handover_Model_Resource</class>
                <entities>
                    <handoverone>
                        <table>bs_handover_handoverone</table>
                    </handoverone>
                    <handovertwo>
                        <table>bs_handover_handovertwo</table>
                    </handovertwo>
                </entities>
            </bs_handover_resource>
        </models>
    </global>
    <adminhtml>
        <layout>
            <updates>
                <bs_handover>
                    <file>bs_handover.xml</file>
                </bs_handover>
            </updates>
        </layout>
        <translate>
            <modules>
                <BS_Handover>
                    <files>
                        <default>BS_Handover.csv</default>
                    </files>
                </BS_Handover>
            </modules>
        </translate>
        <!--<global_search>
            <handoverone>
                <class>bs_handover/adminhtml_search_handoverone</class>
                <acl>bs_handover</acl>
            </handoverone>
            <handovertwo>
                <class>bs_handover/adminhtml_search_handovertwo</class>
                <acl>bs_handover</acl>
            </handovertwo>
        </global_search>-->
    </adminhtml>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <BS_Handover before="Mage_Adminhtml">BS_Handover_Adminhtml</BS_Handover>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
</config>
