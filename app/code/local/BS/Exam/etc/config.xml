<config>
    <modules>
        <BS_Exam>
            <version>1.0.7</version>
        </BS_Exam>
    </modules>
    <global>
        <resources>
            <bs_exam_setup>
                <setup>
                    <module>BS_Exam</module>
                    <class>BS_Exam_Model_Resource_Setup</class>
                </setup>
            </bs_exam_setup>
        </resources>
        <blocks>
            <bs_exam>
                <class>BS_Exam_Block</class>
            </bs_exam>
        </blocks>
        <helpers>
            <bs_exam>
                <class>BS_Exam_Helper</class>
            </bs_exam>
        </helpers>
        <models>
            <bs_exam>
                <class>BS_Exam_Model</class>
                <resourceModel>bs_exam_resource</resourceModel>
            </bs_exam>
            <bs_exam_resource>
                <class>BS_Exam_Model_Resource</class>
                <entities>
                    <exam>
                        <table>bs_exam_exam</table>
                    </exam>
                    <question>
                        <table>bs_exam_question</table>
                    </question>
                    <answer>
                        <table>bs_exam_answer</table>
                    </answer>
                    <examresult>
                        <table>bs_exam_examresult</table>
                    </examresult>
                </entities>
            </bs_exam_resource>
        </models>
    </global>
    <adminhtml>
        <layout>
            <updates>
                <bs_exam>
                    <file>bs_exam.xml</file>
                </bs_exam>
            </updates>
        </layout>
        <translate>
            <modules>
                <BS_Exam>
                    <files>
                        <default>BS_Exam.csv</default>
                    </files>
                </BS_Exam>
            </modules>
        </translate>
