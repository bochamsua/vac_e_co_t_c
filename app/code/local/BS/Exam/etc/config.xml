        </global_search>-->

        <events>
            <catalog_product_save_after>
                <observers>
                    <bs_examresult_mark_product>
                        <type>singleton</type>
                        <class>bs_exam/adminhtml_observer</class>
                        <method>saveExamresultData</method>
                    </bs_examresult_mark_product>
                </observers>
            </catalog_product_save_after>

        </events>
    </adminhtml>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <BS_Exam before="Mage_Adminhtml">BS_Exam_Adminhtml</BS_Exam>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
</config>
