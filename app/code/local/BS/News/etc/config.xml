<config>
    <modules>
        <BS_News>
            <version>1.0.6</version>
        </BS_News>
    </modules>
    <global>
        <resources>
            <bs_news_setup>
                <setup>
                    <module>BS_News</module>
                    <class>BS_News_Model_Resource_Setup</class>
                </setup>
            </bs_news_setup>
        </resources>
        <blocks>
            <bs_news>
                <class>BS_News_Block</class>
            </bs_news>
        </blocks>
        <helpers>
            <bs_news>
                <class>BS_News_Helper</class>
            </bs_news>
        </helpers>
        <models>
            <bs_news>
                <class>BS_News_Model</class>
                <resourceModel>bs_news_resource</resourceModel>
            </bs_news>
            <bs_news_resource>
                <class>BS_News_Model_Resource</class>
                <entities>
                    <news>
                        <table>bs_news_news</table>
                    </news>
                    <user>
                        <table>bs_news_user</table>
                    </user>
                </entities>
            </bs_news_resource>
        </models>
    </global>
    <adminhtml>
        <layout>
            <updates>
                <bs_news>
                    <file>bs_news.xml</file>
                </bs_news>
            </updates>
        </layout>
        <translate>
            <modules>
                <BS_News>
                    <files>
                        <default>BS_News.csv</default>
                    </files>
                </BS_News>
            </modules>
        </translate>
    </adminhtml>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <BS_News before="Mage_Adminhtml">BS_News_Adminhtml</BS_News>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
</config>
