<config>
    <modules>
        <BS_InstructorInfo>
            <version>1.0.1</version>
        </BS_InstructorInfo>
    </modules>
    <global>
        <resources>
            <bs_instructorinfo_setup>
                <setup>
                    <module>BS_InstructorInfo</module>
                    <class>BS_InstructorInfo_Model_Resource_Setup</class>
                </setup>
            </bs_instructorinfo_setup>
        </resources>
        <blocks>
            <bs_instructorinfo>
                <class>BS_InstructorInfo_Block</class>
            </bs_instructorinfo>
        </blocks>
        <helpers>
            <bs_instructorinfo>
                <class>BS_InstructorInfo_Helper</class>
            </bs_instructorinfo>
        </helpers>
        <models>
            <bs_instructorinfo>
                <class>BS_InstructorInfo_Model</class>
                <resourceModel>bs_instructorinfo_resource</resourceModel>
            </bs_instructorinfo>
            <bs_instructorinfo_resource>
                <class>BS_InstructorInfo_Model_Resource</class>
                <entities>
                    <info>
                        <table>bs_instructorinfo_info</table>
                    </info>
                    <otherinfo>
                        <table>bs_instructorinfo_otherinfo</table>
                    </otherinfo>
                </entities>
            </bs_instructorinfo_resource>
        </models>
    </global>
    <adminhtml>
        <layout>
            <updates>
                <bs_instructorinfo>
                    <file>bs_instructorinfo.xml</file>
                </bs_instructorinfo>
            </updates>
        </layout>
        <translate>
            <modules>
                <BS_InstructorInfo>
                    <files>
                        <default>BS_InstructorInfo.csv</default>
                    </files>
                </BS_InstructorInfo>
            </modules>
        </translate>
        <!--<global_search>
            <info>
                <class>bs_instructorinfo/adminhtml_search_info</class>
                <acl>bs_instructorinfo</acl>
            </info>
            <otherinfo>
                <class>bs_instructorinfo/adminhtml_search_otherinfo</class>
                <acl>bs_instructorinfo</acl>
            </otherinfo>
        </global_search>-->
    </adminhtml>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <BS_InstructorInfo before="Mage_Adminhtml">BS_InstructorInfo_Adminhtml</BS_InstructorInfo>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
</config>
